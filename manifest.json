{
    "manifest_version": 3,
    "name": "Taskify",
    "description": "Описание в разработке...",
    "version": "1.0",
    "icons": {
        "16":  "icons/16.png",
        "32":  "icons/32.png",
        "48":  "icons/48.png",
        "128": "icons/128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "scripting"
    ],
    "background": {
        "service_worker": "js/background.js"
    }
}